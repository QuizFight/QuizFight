<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.quizfight.quizfight">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".QuizActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".StartActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AllGamesActivity"
            android:label="@string/title_all_games_activity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".GameDetailActivity"
            android:label="@string/title_game_details_activity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".CreateGameActivity"
            android:label="@string/title_create_game_activity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".AttemptQuizStartActivity"
            android:label="@string/title_attempt_start_activity"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>